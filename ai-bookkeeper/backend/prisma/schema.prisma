generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ======================================
   USER
====================================== */

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  plan      String   @default("basic")
  createdAt DateTime @default(now())

  transactions Transaction[]
  categories   Category[]

  @@index([email])
}


/* ======================================
   CATEGORY (USER-LOCKED)
====================================== */

model Category {
  id        String   @id @default(cuid())
  name      String
  parent    String?
  icon      String?
  builtIn   Boolean  @default(false)
  isRevenue Boolean  @default(false)
  isCOGS    Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  @@index([userId])
  @@index([userId, name])
}


/* ======================================
   TRANSACTION (STRICTLY USER-LOCKED)
====================================== */

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  date        DateTime
  description String
  amount      Float
  categoryId  String?
  createdAt   DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, date])
  @@index([categoryId])
}
